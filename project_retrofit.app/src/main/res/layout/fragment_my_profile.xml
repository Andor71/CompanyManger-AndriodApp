    <ImageView
            android:id="@+id/profile_picture_layout"
            android:layout_width="216dp"
            android:layout_height="226dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.079"
            app:srcCompat="@drawable/ic_profile" app:layout_constraintHorizontal_bias="0.497"/>
    <View
            android:id="@+id/divider1"
            android:layout_width="409dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="1dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toTopOf="@+id/emailText" android:layout_marginBottom="28dp"/>
    <View
            android:id="@+id/divider2"
            android:layout_width="409dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="1dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toTopOf="@+id/locationText" android:layout_marginBottom="32dp"/>
    <View
            android:id="@+id/divider3"
            android:layout_width="409dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="1dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toTopOf="@+id/phoneText" android:layout_marginBottom="40dp"/>
    <ImageButton
            android:src="@drawable/ic_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/editButton"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="40dp"
            app:layout_constraintHorizontal_bias="0.898" android:minHeight="48dp"
            tools:ignore="SpeakableTextPresentCheck"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="32dp" android:id="@+id/firtNameText"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/profile_picture_layout"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/lastNameText"
            app:layout_constraintBottom_toTopOf="@+id/divider1" app:layout_constraintHorizontal_bias="0.485"
            app:layout_constraintVertical_bias="0.12"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="35dp" android:id="@+id/lastNameText"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/profile_picture_layout"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/divider1"
            android:layout_marginEnd="96dp" app:layout_constraintVertical_bias="0.127"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/emailText"
            app:layout_constraintBottom_toTopOf="@+id/divider2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.144"
            android:layout_marginBottom="32dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/locationText"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.144" app:layout_constraintBottom_toTopOf="@+id/divider3"
            android:layout_marginBottom="24dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/phoneText"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="96dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.144"/>


</androidx.constraintlayout.widget.ConstraintLayout>