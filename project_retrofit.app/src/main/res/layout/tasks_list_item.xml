    <TextView
            android:text="Deadline:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deadline"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.055" app:layout_constraintVertical_bias="0.561"/>
    <TextView
            android:id="@+id/task_deadline_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="date"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.561" app:layout_constraintHorizontal_bias="0.298"/>
    <TextView
            android:id="@+id/task_assignee_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Person ID"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.328" app:layout_constraintHorizontal_bias="0.289"/>
    <TextView
            android:id="@+id/userNameList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task title"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.048"
            app:layout_constraintVertical_bias="0.156"/>
    <TextView
            android:id="@+id/task_description_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task description"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.692" app:layout_constraintHorizontal_bias="0.054"/>
    <TextView
            android:id="@+id/task_priority_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task prioririty"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.95"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.502"/>
    <View
            android:id="@+id/divider"
            android:layout_width="409dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="108dp" android:layout_marginStart="1dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="Assignee:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/assignee"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.046" app:layout_constraintVertical_bias="0.328"/>

